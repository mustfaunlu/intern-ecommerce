<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_1sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_4sdp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/home_item_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/product_image_content"
            tools:srcCompat="@tools:sample/avatars[1]" />

        <TextView
            android:id="@+id/home_product_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            tools:text = "Title"
            android:singleLine="true"
            android:ellipsize="end"
            android:ems="4"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:padding="@dimen/_3sdp" />

        <TextView
            android:id="@+id/home_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Hi I am Amiyo, you can see how to ellipse works. Hi I am Amiyo, you can see how to ellipse works."
            android:ellipsize="end"
            android:singleLine="true"
            android:ems="4"
            android:textSize="@dimen/_12ssp"
            android:layout_margin="@dimen/_4sdp"
            android:justificationMode="inter_word"
            android:padding="@dimen/_3sdp" />

        <RatingBar
            android:id="@+id/home_product_rating"
            style="?attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:padding="@dimen/_3sdp"
            android:numStars="5"
            android:rating="3" />


        <TextView
            android:id="@+id/home_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor = "?android:colorPrimary"
            tools:text="1000 TL"
            android:textStyle="bold"
            android:ellipsize="end"
            android:singleLine="true"
            android:ems="4"
            android:textSize="@dimen/_12ssp"
            android:layout_margin="@dimen/_4sdp"
            android:justificationMode="inter_word"
            android:padding="@dimen/_3sdp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>